{% extends 'base.html.twig' %}

{% block title %}Membros{% endblock %}

{% block stylesheets %}
    {{ parent() }}  
    <link href="{{ asset('_css/reset.css') }}" rel="stylesheet" />  
    <link href="{{ asset('_css/listamembros.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

  <div class="div-header">
    <header>
      <h2>{{grupo.nomeGrupo}}</h2>
    </header>
  </div>


  <div class="div-content">  
    <h2 class="titulo-apresentacao"> Grupo dos {{grupo.apresentacao}}</h2> 

    <p>Abaixo est√° a lista de membros deste grupo</p>

    <div class="div-membros">
      {% for membro in grupo.membros %}
        <div class="div-membro">          
          
          
          <img src="/_images/avatar-membro.png" alt="Logo Avatar" class="logo-avatar">   

          <div class="div-li">          
            <li>{{ membro.nome }}</li>
            <li>{{ membro.email }}</li>
          </div>
          
        </div>
        
      {% endfor %}
    </div>  
  
    
    <div class="div-btn">
      <button class="btn-cancelar">
          <a href="{{ url('home')}}">Cancelar</a> 
      </button>
      <form action="{{path('inscricao', {'idGrupo':grupo.id})}}" method="post"> 
          <button class="btn-inscricao">Inscrever-se</button>
      </form>
    </div>

  </div>
    
    
{% endblock %}
